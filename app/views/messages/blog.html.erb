<div class="header">
   <div class="logo">
      <%= image_tag 'logo.PNG' %>
   </div>
   <div class="nav">
      <ul>
         <li><%= link_to 'Home', home_path() %></li>
         <li><%= link_to 'About', about_path() %></li>
         <li><%= link_to 'Portfolio', portfolio_path() %></li>
         <li><%= link_to 'Blog', blog_path() %></li>
         <li><%= link_to 'Contact me', contact_path() %></li>
      </ul>
   </div>
</div>
<div class="row">
   <div class="col-md-2"></div>
   <div class="col-md-6">
      <div class="container">
         <% @messages.each do |message| %> 
         <div class="message">
            <div class="row">
               <div class="col-md-8">
                  <p class="title"><%= message.title %></p>
               </div>
               <div class="col-md-4" style="text-align: right">
                  <p class="time"><%= message.created_at %></p>
               </div>
               
            </div>
            <div class="row">
               <div class="col-md-10">
                  <p class="content"><%= message.content %></p>
               </div>
               <div class="des col-md-2" style="margin-top: 25px" style="text-align: right">
                  <%= link_to 'DELETE', message, method: :delete %>
               </div>
            </div>
         </div>
         <% end %>
      </div>
   </div>
   <div class="col-md-4">
      <a href="/blog/new">
         <div class="btn-new">
            <p>Write a message</p>
         </div>
      </a>
   </div>
</div>
